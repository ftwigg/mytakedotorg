    "allowSyntheticDefaultImports": true,
    "lib": ["es2015"],
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "target": "es6",
    "strictNullChecks": true
  },
  "include": ["./src/main/scripts/**/*.ts"],
  "exclude": ["./node_modules/**"]
}
